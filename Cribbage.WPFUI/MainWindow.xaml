<Window x:Name="frmCribbageGame" x:Class="Cribbage.WPFUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cribbage.WPFUI"
        mc:Ignorable="d"
        Title="Cribbage Game" Height="570" Width="1295" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" SizeToContent="Height" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="134*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="grdMenuCrib" HorizontalAlignment="Left" Height="535" Margin="0,4,0,0" VerticalAlignment="Top" Width="110">
            <Menu x:Name="mnuMenu" Margin="0,0,25,490" Background="{x:Null}">
                <MenuItem Header="Menu">
                    <MenuItem Header="_New Game" InputGestureText="Ctrl+N"
                          Click="NewGame_Click"/>
                    <MenuItem Header="_Quit Game" InputGestureText="Ctrl+Q"
                          Click="QuitGame_Click"/>
                </MenuItem>

            </Menu>
            <Label x:Name="lblPlayersCrib" Content="Crib" HorizontalAlignment="Center" Margin="0,165,0,0" VerticalAlignment="Top" Width="90"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="120" Margin="180,4,0,0" VerticalAlignment="Top" Width="430" Grid.ColumnSpan="2"/>
        <Grid x:Name="grdOpponent" HorizontalAlignment="Left" Height="140" Margin="145,4,0,0" VerticalAlignment="Top" Width="520" Grid.ColumnSpan="2">
            <StackPanel x:Name="stkOppenentCards" Margin="25,10,60,25"/>
        </Grid>
        <Grid x:Name="grdBoardScore" Margin="353,14,10,6" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="32*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <ImageBrush x:Name="imgCribbageBoard1" ImageSource="/cribbageboard.png" Stretch="None"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="329*"/>
                <RowDefinition Height="135*"/>
            </Grid.RowDefinitions>
            <Image x:Name="imgCribbageBoard" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Width="160" Grid.ColumnSpan="2">
                <Image.OpacityMask>
                    <ImageBrush />
                </Image.OpacityMask>
            </Image>
            <Rectangle Grid.Column="1" HorizontalAlignment="Left" Height="71" Margin="89,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="147"/>
            <Label x:Name="lblPlayer1ScoreName" Grid.Column="1" Content="Player 1 Score Name" HorizontalAlignment="Left" Margin="89,154,0,0" VerticalAlignment="Top"/>
            <Label x:Name="lblPlayer1Score" Grid.Column="1" Content="Player 1 Score" HorizontalAlignment="Left" Margin="89,185,0,0" VerticalAlignment="Top"/>
            <Rectangle Grid.Column="1" HorizontalAlignment="Left" Height="75" Margin="89,230,0,0" Stroke="Black" VerticalAlignment="Top" Width="147"/>
            <Label x:Name="lblPlayer2ScoreName" Grid.Column="1" Content="Player 2 Score Name" HorizontalAlignment="Left" Margin="89,230,0,0" VerticalAlignment="Top"/>
            <Label x:Name="lblPlayer2Score" Grid.Column="1" Content="Player 2 Score" HorizontalAlignment="Center" Margin="0,261,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid x:Name="grdPlayerButtons" Margin="145,339,190,10" Grid.ColumnSpan="2">
            <StackPanel x:Name="stkPlayerCards" Margin="0,25,40,100"/>
            <Button x:Name="btnSendToCrib" Content="Send To Crib" HorizontalAlignment="Left" Margin="25,139,0,0" VerticalAlignment="Top" Height="35" Width="80"/>
            <Button x:Name="btnNextHand" Content="Next Hand" HorizontalAlignment="Left" Margin="135,139,0,0" VerticalAlignment="Top" Height="35" Width="80"/>
            <Button x:Name="btnPlayCard" Content="Play Card" HorizontalAlignment="Left" Margin="245,139,0,0" VerticalAlignment="Top" Height="35" Width="80"/>
            <Button x:Name="btnGo" Content="Go" HorizontalAlignment="Left" Margin="355,139,0,0" VerticalAlignment="Top" Height="35" Width="80"/>
            <Button x:Name="btnCountCards" Content="Count Cards" HorizontalAlignment="Left" Margin="465,139,0,0" VerticalAlignment="Top" Height="35" Width="80"/>
        </Grid>
        <Grid x:Name="grdShared" Margin="145,124,230,175" Grid.ColumnSpan="2">
            <Image x:Name="imgCutCard" HorizontalAlignment="Left" Height="180" Margin="425,40,0,0" VerticalAlignment="Top" Width="85">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="/cardBackBlue.png"/>
                </Image.OpacityMask>
            </Image>
            <StackPanel x:Name="stkPlayedCards" Margin="30,70,130,95"/>
            <Label x:Name="lblCutCard" Content="Cut Card" HorizontalAlignment="Left" Margin="480,52,0,0" VerticalAlignment="Top" Width="65"/>
        </Grid>
        <GridSplitter HorizontalAlignment="Left" Height="100" Margin="670,-91,0,0" VerticalAlignment="Top" Width="5" Grid.Column="1"/>

    </Grid>
</Window>
