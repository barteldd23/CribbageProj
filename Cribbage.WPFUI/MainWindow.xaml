        <Image x:Name="imgPlayedCard3" Height="100" Width="83" Source="/cardBackBlue.png" Margin="449,327,868,458"/>
        <Image x:Name="imgPlayedCard4" Height="100" Width="83" Source="/cardBackBlue.png" Margin="537,327,780,458"/>
        <Image x:Name="imgPlayedCard5" Height="100" Width="83" Source="/cardBackBlue.png" Margin="620,327,697,458"/>
        <Image x:Name="imgPlayedCard6" Height="100" Width="83" Source="/cardBackBlue.png" Margin="712,327,605,458"/>
        <Image x:Name="imgPlayedCard7" Height="100" Width="83" Source="/cardBackBlue.png" Margin="800,327,517,458"/>
        <Image x:Name="imgPlayedCard8" Height="100" Width="83" Source="/cardBackBlue.png" Margin="883,327,434,458"/>
        <Label x:Name="lblCutCard" Content="Cut Card" HorizontalAlignment="Left" Margin="954,98,0,0" VerticalAlignment="Top" Width="94" FontSize="20" FontWeight="Bold"/>
        <Image x:Name="imgCutCard" HorizontalAlignment="Left" Height="111" VerticalAlignment="Top" Width="74" Source="/cardBackBlue.png" Margin="964,138,0,0"/>
    </Grid>
</Window>